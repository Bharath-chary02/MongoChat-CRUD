<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Chats</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <header>
            <div>
                <h1>All Chats</h1>
                <p class="subtitle">Your chat history (CRUD with MongoDB)</p>
            </div>

            <form action="/chats/new" method="get">
                <button class="btn btn-primary">+ New Chat</button>
            </form>
        </header>

        <% for(let chat of chats){ %>
            <div class="card">
                <div class="meta">
                    <span class="badge">From: <b><%= chat.from %></b></span>
                    <span class="badge">To: <b><%= chat.to %></b></span>
                </div>

                <div class="msg-box">
                    <%= chat.msg %>
                </div>

                <div class="meta">
                    <span>Sent: <%= chat.created_at ? chat.created_at.toString().split(" ").slice(0, 4).join(" ") : "" %></span>
                    <span><%= chat.created_at ? chat.created_at.toString().split(" ")[4] : "" %></span>
                </div>

                <% if(chat.updated_at){ %>
                    <div class="meta">
                        <span>Edited: <%= chat.updated_at.toString().split(" ").slice(0, 4).join(" ") %></span>
                        <span><%= chat.updated_at.toString().split(" ")[4] %></span>
                    </div>
                <% } %>

                <div class="actions">
                    <form action="/chats/<%= chat.id %>/edit" method="get">
                        <button class="btn btn-outline">Edit</button>
                    </form>

                    <form action="/chats/<%= chat.id %>?_method=DELETE" method="post" onsubmit="return confirmDelete()">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>

    <script>
        function confirmDelete(){
            return confirm("Are you sure you want to delete this chat?");
        }
    </script>
</body>
</html>
